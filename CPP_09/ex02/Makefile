CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98 -g -DDEBUG
OPTIONS = -c
SRC =	main.cpp \
		PmergeMe.cpp \
		debug.cpp \
		PmergeMeUtils.cpp
NAME = PmergeMe
OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "\033[0;32mðŸŽ‰COMPILATION SUCCESSðŸ¥³\033[0m"
	@echo "\033[0;33mUsage: Usage: Run ./PmergeMe.\033[0m"

%.o: %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -f $(OBJ) && echo "\033[0;31mRemoved object files ðŸ—‘ï¸\033[0m"

fclean: clean
	@rm -f $(NAME) && echo "\033[0;31mRemoved executable ðŸ—‘ï¸\033[0m"

re: fclean all

.PHONY: all clean fclean re