CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98
OPTIONS = -c
SRC =	main.cpp \
		Bureaucrat.cpp \
		AForm.cpp \
		PresidentialPardonForm.cpp \
		RobotomyRequestForm.cpp \
		ShrubberyCreationForm.cpp
NAME = coolforms
OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "\033[0;32mðŸŽ‰COMPILATION SUCCESSðŸ¥³\033[0m"
	@echo "\033[0;33mUsage: Usage: Run ./coolforms.\033[0m"

%.o: %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -f $(OBJ) && echo "\033[0;31mRemoved object files ðŸ—‘ï¸\033[0m"

fclean: clean
	@rm -f $(NAME) && echo "\033[0;31mRemoved executable ðŸ—‘ï¸\033[0m"
	@rm -f *_shrubbery && echo "\033[0;31mRemoved shrubbery files ðŸŒ³ðŸª“\033[0m"

re: fclean all

.PHONY: all clean fclean re